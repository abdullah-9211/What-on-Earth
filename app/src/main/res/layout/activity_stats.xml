                <ProgressBar
                    android:id="@+id/ExtremeWeatherEventsStat"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:minWidth="300dp"
                    android:minHeight="40dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/progressbar2" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="20sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greenhouse Gas Concentration : "
                android:fontFamily="@font/concertone"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/GreenHouseGaseConcentrationStat"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:minWidth="300dp"
                    android:minHeight="40dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/progressbar2" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="20sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Inequity : "
                android:fontFamily="@font/concertone"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/SocialInequityStat"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:indeterminate="false"
                    android:max="100"
