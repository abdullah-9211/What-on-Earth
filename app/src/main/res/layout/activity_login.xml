<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/titleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/concertone"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="30dp">

    </TextView>

    <EditText
        android:id="@+id/emailinput4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/concertone"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/emailinput3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@id/emailinput4"
        android:fontFamily="@font/concertone"
        android:text="email : "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/passinput4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailinput4"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/concertone"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/passinput3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailinput3"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@id/passinput4"
        android:fontFamily="@font/concertone"
        android:text="password : "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passinput4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0A0A2D"
        android:elevation="4dp"
        android:text="Log in"
        android:textColor="@color/white" />



</RelativeLayout>